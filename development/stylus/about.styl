@import "mixins.styl"

body.about
  article
    section
      margin 2.4rem 0
    .bookmarklet
      display inline-block
      vertical-align middle
      padding 0 1rem 
      margin 0 .5rem 0 0 
      border-radius 3px
      height 2.105263rem
      line-height 2.105263rem
      background-color #0BA5B7
      color #fff
      text-decoration none
      font-size .666rem
      &:hover
        background-color darken(#0BA5B7, 15%) 
    .contact-us
      position relative
      margin -1.2rem auto 0 
      background-color #fff
      &.contact-err
        .error.contact-required
          display inline-block
      &.email-err
        .error.wrong-email 
          display inline-block
      nav
        margin 1.2rem 0 0 
        .error
          display none
          vertical-align top
          color #f00
          font-family Helvetica, Arial, sans-serif
          font-size .666rem  
          padding 0 0 0 1rem
          line-height 1.0526315rem
        button
          clear-button()
          white-space nowrap
          display inline-block
          height 2.105263rem
          font-size .777rem
          box-sizing border-box
          padding 0 1rem 
          min-width 20%
          color #fff
          cursor pointer
          background-color #0BA5B7
          &:hover
            background-color darken(#0BA5B7, 15%) 
      .role
        position relative
        clear both
        // overflow hidden
        height 1.618rem
        padding-top 1.618rem
        border-bottom 1px solid #0ba5b7
        span
          white-space nowrap
          position absolute
          top 0
          left 0
          right 0
          
          font-size .611rem
          line-height 1.618rem
          color rgb(169, 169, 169)
          
          z-index 1
        input
          position absolute
          left -9999px
        input:focus~span
          color #0ba5b7
        input:checked+label
          color #000
          border-bottom-style none
          cursor default
          pointer-events none 
           
        label
          color #999 
          float left
          width 50%
          box-sizing border-box
          line-height 1.618rem
          font-size .666rem 
          &:hover
            color #000
            cursor pointer
      label.message
        clear both
        position relative
        display block
        width 100%
        height auto
        border-bottom-style none
        padding 2.118rem 0 .5rem
      label.input
        float left
        overflow hidden
        height 3.216263rem
        width 33%
        border-bottom 1px solid #0ba5b7
        padding-top 1.111rem
        position relative
        box-sizing border-box
        &:first-child
          width 34% 
          span
            left 0
          input
            padding-left 0
      label
        span
          white-space nowrap
          position absolute
          top 0
          left 1rem
          right 0
          
          font-size .611rem
          line-height 1.618rem
          color rgb(169, 169, 169)
          
          z-index 1
          opacity 0
          transition opacity .25s
          
        textarea
          clear both
          width 100%
          height 1.618rem
          line-height  1.618rem
          font-size .9rem
          margin 0
          display block
          padding 0
          border-style none
          box-sizing border-box
          resize none
          transform translateZ(0)
          &+span
            left 0
            line-height 2.118rem
          &:focus + span
              color #0ba5b7
          &.non-empty + span
            opacity 1
            z-index 2

        input
          clear-input()
          position absolute
          bottom 0
          left 0
          right 0
          width 100%
          z-index 2
          font-size .9rem
          padding-left 1rem 
          &:focus + span
            color #0ba5b7
          &.non-empty + span
            opacity 1
            z-index 2
            
          
        