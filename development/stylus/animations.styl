@keyframes spin 
  50%
    transform rotate(180deg)
  100%
    transform rotate(360deg)
    
@keyframes demo 
  0% 
    top 0
  50%
    top 2.105263rem
  100%
    top 0
    

@keyframes hart
  0%
    transform scale(1)
  50%
    transform scale(1.2)
  100%
    transform scale(1)

@keyframes hart-broken
  0%
    transform scale(1)
  50%
    transform scale(0.8)
  100%
    transform scale(1)
