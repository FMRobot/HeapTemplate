@import "mixins.styl"

.calendar
  position relative
  margin 0 0 2rem 
  header
    line-height 2rem
    margin 0 0 1rem 
    clear-after()

    .close
      float right
      cursor pointer
      &:hover
        color  #0BA5B7
      &:before
        icon()
        content '\e806'
    .prev-month,
    .next-month
      width 2rem 
      vertical-align middle
      display inline-block
      text-align center
      cursor pointer
      &:hover
        color  #0BA5B7 
      &:before
        icon()
        font-size 1.2rem
    .next-month:before
      content '\e80b'
    .prev-month:before
      content '\e819'
    .month
      text-transform capitalize
      display inline-block
      font-size .9rem
      width 9rem
      text-align center
      
  .days
    width 100%
    line-height 0
    font-size 0
    position relative
    .day
      cursor pointer
      display inline-block
      
      width 14.28571%
      height 2rem
      line-height 2rem
      font-size .9rem
      padding 1.4% 0
      text-indent .5rem

      &:nth-child(7n-1),
      &:nth-child(7n)
        color #f00
      &:hover
        background-color #f0f0f0
      &.today
        background-color  #0BA5B7 
        color #fff 
        &:hover
          background-color darken(#0BA5B7, 15%)
      
      
      