@import "mixins.styl"

.confirm-article-remove
  position absolute
  top 0
  left 0
  right 0
  bottom 0
  margin auto
  background-color rgba(255,255,255,.9)
  color #FFF
  .confirm
    cursor pointer
    position absolute
    bottom 0
    top 0
    right 50%
    width 10%
    height 2.105263rem
    margin auto
    background-color #0BA5B7
    font-size 0
    &:before
      icon()
      position absolute
      left 0
      top 0
      bottom 0
      right 0
      margin auto
      text-align center
      vertical-align middle
      font-size 1rem
      line-height  2.105263rem
      width 2.105263rem
      height 2.105263rem 
      content '\e813'
    &:hover
      background-color darken(#0BA5B7, 20%) 

  .deny
    cursor pointer
    position absolute
    bottom 0
    top 0
    left 50%
    width 10%
    margin auto
    height 2.105263rem
    background-color #ffc000
    font-size 0
    &:before
      icon()
      position absolute
      left 0
      top 0
      bottom 0
      right 0
      margin auto
      text-align center
      vertical-align middle
      font-size 1rem
      line-height  2.105263rem
      width 2.105263rem
      height 2.105263rem 
      content '\e814'
    &:hover
      background-color #ff9600