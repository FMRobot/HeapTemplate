@import "mixins.styl"

.tag-list 
  display none
  position relative
  line-height 0
  font-size 0
  padding 0 1.10526rem 0 2.10526rem
  margin -3rem 0 1rem 
  &.open
    display block
  menu
    max-width 43rem
    margin 0 auto 1rem 
    padding 1rem 1rem 0 0
    line-height 1.618rem
    
    position relative
    overflow hidden
    display block
    select
      margin 0 1rem 0 0 
    .clear
      white-space nowrap
      border-bottom 1px dotted #666
      text-decoration none
      margin 0 1rem 0 0 
      font-size 0.7rem
      &:hover
        border-bottom-color #0ba5b7
    .close
      float right
      clear-button()
      font-size 0
      cursor pointer
      margin-right -2.10526rem
      &:hover
        color #0ba5b7
      &:before
        icon()
        font-size 1rem
        content '\e806'
  .type
    width 25%
    padding-right 1rem
    display inline-block
    vertical-align top
    box-sizing border-box
    margin 0 0 1rem
    &.domains
      width 50%
    .title
      white-space nowrap
      font-size 1rem
      line-height 1.618rem
      border-bottom 1px solid #000
      margin 0 0 .5rem 
    &.language
      .tags
        column-width 4rem  
    .tags
      column-width 8rem
      column-gap 1rem
      font-size .77rem
      line-height 1.618rem
      a
        display inline-block
        width 100%
        text-decoration none
        color #000
        &:hover
          color #C00
      .selected
        color #c00
        &:after
          icon()
          margin 0 0 0 .25rem 
          content '\e805'
        &:hover
         color #000
         
@media screen and (max-width: 45rem)
  .tag-list
    menu
      select
        margin 0 0 .5rem
        display block
    .type
      width: 33.3%
      &.domains
        width 100%

@media screen and (max-width: 30rem)
  .tag-list
    menu
      select
        margin 0 0 .5rem
        display block
    .type
      width: 50%
      &.domains
        width 100%
        
@media screen and (max-width: 22rem)
  .tag-list
    menu
      select
        margin 0 0 .5rem
        display block
    .type
      width 100%