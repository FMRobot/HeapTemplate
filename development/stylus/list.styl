@import "animations.styl"
@import "mixins.styl"

// Стили уникальные для Кучи
body.list
  position relative

  .page
    max-width: 43rem;
    margin: 0 auto;
    padding: 1rem 2.10526rem 0;  

  .config
    font-family Helvetica, Arial, sans-serif
    position relative
    max-width 43rem
    padding 0 2.105263rem
    height 2.105263rem
    margin 4rem auto 3rem

    
    .filter
      display inline-block
      margin 0 .5rem
      float right
      height 2.105263rem
      cursor pointer
      position relative  
          
      span
        font-size .666rem
        border-bottom 1px dotted #666
        overflow hidden
        position relative
        top 1px
        &:hover
          color #0ba5b7
          border-bottom-color #0ba5b7
      
      &.selected
        background-color #0BA5B7
        padding 0 .5rem 
        margin 0 
        &:before
          content "."
          height 0
          width 0
          display block
          overflow hidden
          font-size 0
          line-height 0
          border-style solid
          border-color #0ba5b7 transparent transparent
          border-width .35rem .35rem 0
          position absolute
          top 100%
          left 50%
          margin 0 0 0 -.35rem 
        &:hover
          background-color darken(#0BA5B7,20%)
          &:before
            border-color darken(#0BA5B7,20%) transparent transparent
          span
            border-bottom-color darken(#0BA5B7,20%)
        span
          color #FFF
          border-bottom-color #0BA5B7
  
  .article-list
    article
      font-family Helvetica, Arial, sans-serif
      font-size 0.666rem
      line-height 1.257186rem
      box-sizing border-box
      width 100%
      position relative
      margin 3rem 0
      padding 0
      
      &:first-child
        margin-top 0
      
      header
        position relative
      
        // Заголовок статьи
        .title
          color #0BA5B7
          line-height 2.4rem
          font-size 1.8rem
          margin 0 0 .2rem
          font-family Georgia, Palatino, Times, 'Times New Roman', serif
          a
            border-bottom 1px solid #0BA5B7
            color #0BA5B7
            text-decoration none
            &:hover
              border-bottom-style none
              text-decoration none

      .contributors
      .info
        &>:first-child:before
          display none
        &>:before
          content: "•";
          display: inline;
          margin: 0 .5rem;
          
      // Теги
      .tags
        overflow hidden
        a
          color #000
          display inline
          white-space nowrap
          text-decoration none
          border-bottom 1px dotted #666 
          &:hover 
            color #0ba5b7
            border-bottom-color #0ba5b7 
