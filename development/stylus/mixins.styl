clear-after()
  &:after
    content "."
    display block
    height 0
    line-height 0
    font-size 0
    overflow hidden
    position relative
    clear both

icon()
  font-family "fontello"
  font-style normal
  font-weight normal
  speak none
  display inline-block
  text-decoration inherit
  text-align center
  font-variant normal
  text-transform none
  
clear-input()
  -moz-appearance none
  -webkit-appearance none
  appearance none
  margin 0
  padding 0
  box-shadow none
  line-height 1.618rem
  height 1.618rem
  display inline-block
  position relative
  background none
  border-radius 0
  border-style none
  width auto
  box-sizing border-box
  
clear-button()
  background none
  border-radius 0
  border-style none
  box-shadow none
  box-sizing border-box
  margin 0
  padding 0 .1rem
  height 2.105263rem
  line-height 2.105263rem
  -webkit-appearance none
  position relative
  overflow visible
  display inline-block

link-button()
  cursor pointer
  text-decoration underline
  &:hover
    color #0ba5b7 